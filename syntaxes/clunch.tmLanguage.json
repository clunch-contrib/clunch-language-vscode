{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "clunch language",
	"patterns": [
		{
			"include": "#comment"
		}
	],
	"repository": {
		"comment": {
			"name": "comment.quoted.clunch",
            "begin":"<!--",
			"end": "-->",
			"patterns": [
				{
					"name": "constant.character.escape.clunch",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.clunch"
}
